user_input = input('Please type something and press enter: ')
print('You entered: ')
print(user_input)
text = input('What would you like the cat to say? ')
text_length = len(text)
print('            {}'.format('_' * text_length))
print('          < {} >'.format(text))
print('            {}'.format('_' * text_length))
print('         /')
print(' /\_/\  /')
print('( o.o )')
print(' > ^ <')
